<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yashladha.android_seller.fragments.OrdersFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout1"
        android:weightSum="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/download"
            android:id="@+id/ivProduct"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:layout_toRightOf="@+id/ivProduct"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:layout_weight="0.98">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/tvProductName"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/tvPrice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase/Exchange/Refund"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"
                android:id="@+id/tvTypeOfRequest" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:id="@+id/linearLayout4">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:text="Number of requests"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:id="@+id/tvNumOfRequests" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/tvNum"
                    android:paddingLeft="15dp"
                    android:paddingBottom="5dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:id="@+id/linearLayout5">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="30dp"
                    android:text="Accept"
                    android:id="@+id/btAccept"
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:textSize="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/back"

                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="30dp"
                    android:text="Reject"
                    android:id="@+id/btReject"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/back3" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
